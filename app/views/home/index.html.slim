#wrap
  article.jumbotron
    .container
      h1= Quiz
      p= t('.description')
      = button_to t('.play'), join_rooms_path, class: 'btn-play'
    = render 'langbox'
    = render 'authbox'

  .container
    section.info.row
      article.col-md-4
        h2
          i.icon.icon-trophy
          '
          | #{t('home.stats.correct_answers')}
        ul
          - @today_stats[:correct_answers].limit(10).each do |stat|
            li
              | #{stat.correct_answers}
              '
              = render 'users/link_to_user', user: stat.user
      article.col-md-4
        h2
          i.icon.icon-bolt
          '
          | #{t('home.stats.fastest_answer')}
        ul
          - @today_stats[:fastest_answer].limit(10).each do |stat|
            li
              | #{stat.fastest_answer.round(2)}
              '
              = render 'users/link_to_user', user: stat.user
      article.col-md-4
        h2
          i.icon.icon-check
          '
          | #{t('home.stats.answers_in_a_row')}
        ul
          - @today_stats[:answers_in_a_row].limit(10).each do |stat|
            li
              | #{stat.answers_in_a_row}
              '
              = render 'users/link_to_user', user: stat.user
      - if @today_stats[:correct_answers].count == 0
        p.no_stats.lead = t('home.stats.no_today')

footer#footer
  .container
    p
      = link_to "Rails Rumble 2013", "http://railsrumble.com/entries/84-quiz"

